#!/usr/bin/env bash
# Setup script for enhanced MCP client with tab completion

echo "ğŸ”§ Setting up enhanced MCP client..."
echo ""

# Check if uv is available
if ! command -v uv &> /dev/null; then
    echo "âŒ Error: uv package manager not found"
    echo "Please install uv first: https://github.com/astral-sh/uv"
    exit 1
fi

echo "ğŸ“¦ Installing prompt_toolkit for tab completion..."
uv add prompt_toolkit

if [ $? -eq 0 ]; then
    echo "âœ… prompt_toolkit installed successfully!"
    echo ""
    echo "ğŸ‰ Setup complete! You can now run:"
    echo "   ./test-mcp"
    echo ""
    echo "Features enabled:"
    echo "  âœ“ Tab completion for commands"
    echo "  âœ“ Command history (up/down arrows)"
    echo "  âœ“ Parameter completion"
    echo "  âœ“ In-line editing (Ctrl+A, Ctrl+E, etc.)"
else
    echo "âš ï¸  Failed to install prompt_toolkit"
    echo "The client will still work but without tab completion"
fi
